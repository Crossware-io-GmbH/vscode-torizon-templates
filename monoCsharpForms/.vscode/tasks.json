{
    "version": "2.0.0",
    "tasks": [
    // ----------------------------------------------------------------- COMMON
    {
        "label": "docker-login",
        "command": "docker",
        "type": "process",
        "options": {
            "env": {
                "DOCKER_LOGIN": "${input:dockerLogin}",
                "DOCKER_PSSWD": "${input:dockerPsswd}"
            }
        },
        "args": [
            "login",
            "--username",
            "${input:dockerLogin}",
            "--password",
            "${input:dockerPsswd}"
        ],
        "dependsOrder": "sequence"
    },
    {
        "label": "run-docker-registry",
        "command": "pwsh",
        "type": "process",
        "presentation": {
            "echo": false,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
        "args": [
            "${workspaceFolder}/.conf/runContainerIfNotExists.ps1",
            "docker",
            "'-d -p 5000:5000 --restart=always registry:2'",
            "registry"
        ],
        "dependsOrder": "sequence"
    },
    {
        "label": "run-torizon-binfmt",
        "command": "pwsh",
        "type": "process",
        "presentation": {
            "echo": false,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
        "args": [
            "${workspaceFolder}/.conf/runContainerIfNotExists.ps1",
            "docker",
            "'--rm -it --privileged torizon/binfmt'",
            "binfmt"
        ],
        "dependsOrder": "sequence"
    },
    {
        "label": "run-share-wsl-ports",
        "command": "pwsh",
        "type": "process",
        "presentation": {
            "echo": false,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
        "args": [
            "${workspaceFolder}/.conf/shareWSLPorts.ps1"
        ],
        "dependsOrder": "sequence"
    },
    {
        "label": "check-deps",
        "command": "pwsh",
        "type": "process",
        "presentation": {
            "echo": false,
            "reveal": "always",
            "focus": true,
            "panel": "dedicated",
            "showReuseMessage": true,
            "clear": false
        },
        "args": [
            "${workspaceFolder}/.conf/checkDeps.ps1",
        ],
        "dependsOrder": "sequence"
    },
    {
        "label": "copy-docker-compose",
        "detail": "hide",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "scp",
            "${workspaceFolder}/docker-compose.yml",
            "torizon@${config:torizon_ip}:~/"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "wait-a-bit",
        "detail": "hide",
        "command": "sleep",
        "type": "process",
        "args": [
            "1"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "pos-cleanup",
        "detail": "hide",
        "command": "ssh",
        "type": "process",
        "args": [
            "-i",
            "${workspaceFolder}/.conf/id_rsa",
            "-p",
            "${config:torizon_debug_ssh_port}",
            "-o",
            "UserKnownHostsFile=/dev/null",
            "-o", 
            "StrictHostKeyChecking=no",
            "torizon@${config:torizon_ip}",
            "rm -rf ~/app"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "build-application",
        "command": "msbuild",
        "type": "process",
        "args": [
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "deploy-application",
        "detail": "hide",
        "command": "scp",
        "type": "process",
        "args": [
            "-i",
            "${workspaceFolder}/.conf/id_rsa",
            "-o",
            "UserKnownHostsFile=/dev/null",
            "-o", 
            "StrictHostKeyChecking=no",
            "-P",
            "${config:torizon_debug_ssh_port}",
            "-pr",
            "${workspaceFolder}/bin/Debug",
            "torizon@${config:torizon_ip}:~/app"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "deploy-assets",
        "detail": "hide",
        "command": "scp",
        "type": "process",
        "args": [
            "-i",
            "${workspaceFolder}/.conf/id_rsa",
            "-o",
            "UserKnownHostsFile=/dev/null",
            "-o", 
            "StrictHostKeyChecking=no",
            "-P",
            "${config:torizon_debug_ssh_port}",
            "-pr",
            "${workspaceFolder}/assets",
            "torizon@${config:torizon_ip}:~/assets"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    // ------------------------------------------------------------------ ARMv7
    {
        "label": "build-release-arm",
        "detail": "hide",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "DOCKER_LOGIN": "${input:dockerLogin}",
                "TAG": "arm"
            }
        },
        "args": [
            "build",
            "--build-arg",
            "IMAGE_ARCH=arm",
            "__container__"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "push-release-arm",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "DOCKER_LOGIN": "${input:dockerLogin}",
                "TAG": "arm"
            }
        },
        "args": [
            "push",
            "__container__"
        ],
        "dependsOn": [
            "docker-login",
            "build-release-arm"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "build-torizon-arm",
        "detail": "hide",
        "command": "msbuild",
        "type": "process",
        "args": [
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "build-container-torizon-debug-arm",
        "detail": "hide",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "LOCAL_REGISTRY": "localhost",
                "TAG": "arm"
            }
        },
        "args": [
            "build",
            "--build-arg",
            "IMAGE_ARCH=arm/v7",
            "dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "push-container-torizon-debug-arm",
        "detail": "hide",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "LOCAL_REGISTRY": "localhost",
                "TAG": "arm"
            }
        },
        "args": [
            "push",
            "dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "pull-container-torizon-debug-arm",
        "detail": "hide",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm docker-compose pull dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "run-container-torizon-debug-arm",
        "detail": "hide",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm docker-compose up -d dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "pre-cleanup-arm",
        "detail": "hide",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm docker-compose down"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "run-mono-debug-server-arm",
        "detail": "hide",
        "command": "ssh",
        "type": "process",
        "args": [
            "-i",
            "${workspaceFolder}/.conf/id_rsa",
            "-p",
            "${config:torizon_debug_ssh_port}",
            "-o",
            "UserKnownHostsFile=/dev/null",
            "-o", 
            "StrictHostKeyChecking=no",
            "torizon@${config:torizon_ip}",
            "mono --debug --debugger-agent=transport=dt_socket,server=y,address=0.0.0.0:55555 ~/app/__change__.exe > out.log 2> err.log &"
        ],
        "dependsOn": [
            "copy-docker-compose",
            "pre-cleanup-arm",
            "build-application",
            "build-container-torizon-debug-arm",
            "push-container-torizon-debug-arm",
            "pull-container-torizon-debug-arm",
            "run-container-torizon-debug-arm",
            "wait-a-bit",
            "pos-cleanup",
            "deploy-application"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    // ------------------------------------------------------------------ ARMv8
    {
        "label": "build-container-torizon-debug-arm64",
        "detail": "hide",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "LOCAL_REGISTRY": "localhost",
                "TAG": "arm64"
            }
        },
        "args": [
            "build",
            "--build-arg",
            "IMAGE_ARCH=arm64",
            "dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "push-container-torizon-debug-arm64",
        "detail": "hide",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "LOCAL_REGISTRY": "localhost",
                "TAG": "arm64"
            }
        },
        "args": [
            "push",
            "dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "pull-container-torizon-debug-arm64",
        "detail": "hide",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm64 docker-compose pull dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "run-container-torizon-debug-arm64",
        "detail": "hide",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm64 docker-compose up -d dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "pre-cleanup-arm64",
        "detail": "hide",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm64 docker-compose down"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "run-mono-debug-server-arm64",
        "detail": "hide",
        "command": "ssh",
        "type": "process",
        "args": [
            "-i",
            "${workspaceFolder}/.conf/id_rsa",
            "-p",
            "${config:torizon_debug_ssh_port}",
            "-o",
            "UserKnownHostsFile=/dev/null",
            "-o", 
            "StrictHostKeyChecking=no",
            "torizon@${config:torizon_ip}",
            "mono --debug --debugger-agent=transport=dt_socket,server=y,address=0.0.0.0:55555 ~/app/__change__.exe > out.log 2> err.log &"
        ],
        "dependsOn": [
            "copy-docker-compose",
            "pre-cleanup-arm64",
            "build-application",
            "build-container-torizon-debug-arm64",
            "push-container-torizon-debug-arm64",
            "pull-container-torizon-debug-arm64",
            "run-container-torizon-debug-arm64",
            "wait-a-bit",
            "pos-cleanup",
            "deploy-application",
            "deploy-assets"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "build-release-arm64",
        "detail": "hide",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "DOCKER_LOGIN": "${input:dockerLogin}",
                "TAG": "arm64"
            }
        },
        "args": [
            "build",
            "--build-arg",
            "IMAGE_ARCH=arm64",
            "__container__"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "push-release-arm64",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "DOCKER_LOGIN": "${input:dockerLogin}",
                "TAG": "arm64"
            }
        },
        "args": [
            "push",
            "__container__"
        ],
        "dependsOn": [
            "docker-login",
            "build-release-arm64"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    }
],
"inputs": [
    {
        "id": "dockerLogin",
        "type": "promptString",
        "description": "Container Registry Login"
    },
    {
        "id": "dockerPsswd",
        "type": "promptString",
        "password": true,
        "description": "Container Registry Password"
    }
]
}
