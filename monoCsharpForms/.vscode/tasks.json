{
  "version": "2.0.0",
  "tasks": [
    // ----------------------------------------------------------------- COMMON
    {
        "label": "copy-docker-compose",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "scp",
            "${workspaceFolder}/docker-compose.yml",
            "torizon@${config:torizon_ip}:~/"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "wait-a-bit",
        "command": "sleep",
        "type": "process",
        "args": [
            "1"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "pos-cleanup",
        "command": "ssh",
        "type": "process",
        "args": [
            "-i",
            "${workspaceFolder}/.conf/id_rsa",
            "-p",
            "${config:torizon_debug_ssh_port}",
            "-o",
            "UserKnownHostsFile=/dev/null",
            "-o", 
            "StrictHostKeyChecking=no",
            "torizon@${config:torizon_ip}",
            "rm -rf ~/app"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "build-application",
        "command": "msbuild",
        "type": "process",
        "args": [
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "deploy-application",
        "command": "scp",
        "type": "process",
        "args": [
            "-i",
            "${workspaceFolder}/.conf/id_rsa",
            "-o",
            "UserKnownHostsFile=/dev/null",
            "-o", 
            "StrictHostKeyChecking=no",
            "-P",
            "${config:torizon_debug_ssh_port}",
            "-pr",
            "${workspaceFolder}/bin/Debug",
            "torizon@${config:torizon_ip}:~/app"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "deploy-assets",
        "command": "scp",
        "type": "process",
        "args": [
            "-i",
            "${workspaceFolder}/.conf/id_rsa",
            "-o",
            "UserKnownHostsFile=/dev/null",
            "-o", 
            "StrictHostKeyChecking=no",
            "-P",
            "${config:torizon_debug_ssh_port}",
            "-pr",
            "${workspaceFolder}/assets",
            "torizon@${config:torizon_ip}:~/assets"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    // ------------------------------------------------------------------ ARMv7
    {
        "label": "build-torizon-arm",
        "command": "msbuild",
        "type": "process",
        "args": [
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "build-container-torizon-debug-arm",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "LOCAL_REGISTRY": "localhost",
                "TAG": "arm"
            }
        },
        "args": [
            "build",
            "--build-arg",
            "IMAGE_ARCH=arm/v7",
            "dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "push-container-torizon-debug-arm",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "LOCAL_REGISTRY": "localhost",
                "TAG": "arm"
            }
        },
        "args": [
            "push",
            "dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "pull-container-torizon-debug-arm",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm docker-compose pull dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "run-container-torizon-debug-arm",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm docker-compose up -d dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "pre-cleanup-arm",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm docker-compose down"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "run-mono-debug-server-arm",
        "command": "ssh",
        "type": "process",
        "args": [
            "-i",
            "${workspaceFolder}/.conf/id_rsa",
            "-p",
            "${config:torizon_debug_ssh_port}",
            "-o",
            "UserKnownHostsFile=/dev/null",
            "-o", 
            "StrictHostKeyChecking=no",
            "torizon@${config:torizon_ip}",
            "mono --debug --debugger-agent=transport=dt_socket,server=y,address=0.0.0.0:55555 ~/app/__change__.exe > out.log 2> err.log &"
        ],
        "dependsOn": [
            "copy-docker-compose",
            "pre-cleanup-arm",
            "build-application",
            "build-container-torizon-debug-arm",
            "push-container-torizon-debug-arm",
            "pull-container-torizon-debug-arm",
            "run-container-torizon-debug-arm",
            "wait-a-bit",
            "pos-cleanup",
            "deploy-application"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    // ------------------------------------------------------------------ ARMv8
    {
        "label": "build-container-torizon-debug-arm64",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "LOCAL_REGISTRY": "localhost",
                "TAG": "arm64"
            }
        },
        "args": [
            "build",
            "--build-arg",
            "IMAGE_ARCH=arm64",
            "dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "push-container-torizon-debug-arm64",
        "command": "docker-compose",
        "type": "process",
        "options": {
            "env": {
                "LOCAL_REGISTRY": "localhost",
                "TAG": "arm64"
            }
        },
        "args": [
            "push",
            "dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "pull-container-torizon-debug-arm64",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm64 docker-compose pull dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "run-container-torizon-debug-arm64",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm64 docker-compose up -d dotnet-mono-debug"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "pre-cleanup-arm64",
        "command": "sshpass",
        "type": "process",
        "args": [
            "-p",
            "${config:torizon_psswd}",
            "ssh",
            "torizon@${config:torizon_ip}",
            "LOCAL_REGISTRY=${config:host_ip} TAG=arm64 docker-compose down"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
    {
        "label": "run-mono-debug-server-arm64",
        "command": "ssh",
        "type": "process",
        "args": [
            "-i",
            "${workspaceFolder}/.conf/id_rsa",
            "-p",
            "${config:torizon_debug_ssh_port}",
            "-o",
            "UserKnownHostsFile=/dev/null",
            "-o", 
            "StrictHostKeyChecking=no",
            "torizon@${config:torizon_ip}",
            "mono --debug --debugger-agent=transport=dt_socket,server=y,address=0.0.0.0:55555 ~/app/__change__.exe > out.log 2> err.log &"
        ],
        "dependsOn": [
            "copy-docker-compose",
            "pre-cleanup-arm64",
            "build-application",
            "build-container-torizon-debug-arm64",
            "push-container-torizon-debug-arm64",
            "pull-container-torizon-debug-arm64",
            "run-container-torizon-debug-arm64",
            "wait-a-bit",
            "pos-cleanup",
            "deploy-application",
            "deploy-assets"
        ],
        "dependsOrder": "sequence",
        "problemMatcher": "$msCompile"
    },
  ]
}
