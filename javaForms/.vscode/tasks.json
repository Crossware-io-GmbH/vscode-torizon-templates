        {
            "label": "run-debugger-local",
            "command": "java",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "args": [
                "-agentlib:jdwp=transport=dt_socket,server=y,address=0.0.0.0:${config:torizon_debug_port},suspend=n",
                "-jar",
                "${workspaceFolder}/dist/GUIFormExamples.jar"
            ],
            "problemMatcher": [{
                "pattern": [{
                    "regexp": ".",
                    "file": 1,"line": 1,
                    "column": 1,"message": 1
                }],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": { "regexp": "." },
                    "endsPattern": { "regexp": "." }
                },
            }],
            "icon": {
                "id": "flame",
                "color": "terminal.ansiYellow"
            }
