                    "GPU": "-vivante"
                }
            },
            "args": [
                "push",
                "node-electron-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pull-container-torizon-debug-arm64",
            "detail": "hide",
            "command": "sshpass",
            "type": "process",
            "args": [
                "-p",
                "${config:torizon_psswd}",
                "ssh",
                "-o", "StrictHostKeyChecking=n",
                "torizon@${config:torizon_ip}",
                "LOCAL_REGISTRY=${config:host_ip} TAG=arm64 GPU=-vivante docker-compose pull node-electron-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-container-torizon-debug-arm64",
            "detail": "hide",
            "command": "sshpass",
            "type": "process",
            "args": [
                "-p",
                "${config:torizon_psswd}",
                "ssh",
                "-o", "StrictHostKeyChecking=n",
                "torizon@${config:torizon_ip}",
                "LOCAL_REGISTRY=${config:host_ip} TAG=arm64 GPU=-vivante docker-compose up -d node-electron-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy-torizon-arm64",
            "detail": "hide",
            "command": "scp",
            "type": "process",
            "args": [
                "-i",
                "${workspaceFolder}/.conf/id_rsa",
                "-o",
                "UserKnownHostsFile=/dev/null",
                "-o",
                "StrictHostKeyChecking=no",
                "-P",
                "${config:torizon_debug_ssh_port}",
                "-pr",
                "${workspaceFolder}/out/__change__-linux-arm64",
                "torizon@${config:torizon_ip}:~/app"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "start-torizon-debug-arm64",
            "detail": "hide",
            "command": "ssh",
            "type": "process",
            "args": [
                "-i",
                "${workspaceFolder}/.conf/id_rsa",
                "-o",
                "UserKnownHostsFile=/dev/null",
                "-o",
                "StrictHostKeyChecking=no",
                "-p",
                "${config:torizon_debug_ssh_port}",
                "torizon@${config:torizon_ip}",
                "/home/torizon/app/__change__ --no-sandbox --remote-debugging-port=9222 --inspect-brk=0.0.0.0:9229 >out.log 2>err.log &"
            ],
            "dependsOn": [
                "npm-install",
                "copy-docker-compose",
                "pre-cleanup-arm64",
                "package-torizon-arm64",
                "build-container-torizon-debug-arm64",
                "push-container-torizon-debug-arm64",
                "pull-container-torizon-debug-arm64",
                "run-container-torizon-debug-arm64",
                "wait-a-bit",
                "pos-cleanup",
                "deploy-torizon-arm64"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-release-arm64",
            "detail": "hide",
            "command": "docker-compose",
            "type": "process",
            "options": {
                "env": {
                    "DOCKER_LOGIN": "${input:dockerLogin}",
                    "TAG": "arm64"
                }
            },
            "args": [
                "build",
                "--build-arg",
                "IMAGE_ARCH=arm64",
                "__container__"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "push-release-arm64",
            "command": "docker-compose",
            "type": "process",
            "options": {
                "env": {
                    "DOCKER_LOGIN": "${input:dockerLogin}",
                    "TAG": "arm64"
                }
            },
            "args": [
                "push",
                "__container__"
            ],
            "dependsOn": [
                "docker-login",
                "build-release-arm64"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "dockerLogin",
            "type": "promptString",
            "description": "Container Registry Login"
        },
        {
            "id": "dockerImageRegistry",
            "type": "promptString",
            "description": "Image Registry"
        },
        {
            "id": "dockerImageTag",
            "type": "promptString",
            "description": "Image Tag"
        },
        {
            "id": "dockerImageGpu",
            "type": "promptString",
            "description": "Image GPU"
        },
        {
            "id": "dockerPsswd",
            "type": "promptString",
            "password": true,
            "description": "Container Registry Password"
        }
    ]
}
