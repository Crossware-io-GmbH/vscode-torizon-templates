  "version": "0.2.0",
  "configurations": [
    {
      // Use IntelliSense to find out which attributes exist for C# debugging
      // Use hover for the description of the existing attributes
      // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
      "name": "Skia.GTK openGL",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-skia-gtk",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/dotnetUno.Skia.Gtk/bin/Debug/net6.0/dotnetUno.Skia.Gtk.dll",
      "args": [],
      "env": {
        "DOTNET_MODIFIABLE_ASSEMBLIES": "debug",
        "GDK_BACKEND": "x11",
        "UNO_DISABLE_OPENGL": "false",
        "UNO_FULLSCREEN": "false"
      },
      "cwd": "${workspaceFolder}/dotnetUno.Skia.Gtk",
      // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      // Use IntelliSense to find out which attributes exist for C# debugging
      // Use hover for the description of the existing attributes
      // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
      "name": "Skia.GTK noGL",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-skia-gtk",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/dotnetUno.Skia.Gtk/bin/Debug/net6.0/dotnetUno.Skia.Gtk.dll",
      "args": [],
      "env": {
        "DOTNET_MODIFIABLE_ASSEMBLIES": "debug",
        "UNO_DISABLE_OPENGL": "true",
        "UNO_FULLSCREEN": "false"
      },
      "cwd": "${workspaceFolder}/dotnetUno.Skia.Gtk",
      // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Torizon ARMv7",
      "type": "coreclr",
      "request": "launch",
      "program": "~/app/dotnetUno.Skia.Gtk",
      "cwd": "~/app/",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
        "DOTNET_MODIFIABLE_ASSEMBLIES": "debug",
        // "GDK_BACKEND": "x11",
        "UNO_DISABLE_OPENGL": "true",
        "UNO_FULLSCREEN": "true"
      },
      "args": [],
      "pipeTransport": {
          "pipeCwd": "${workspaceFolder}",
          "pipeProgram": "ssh",
          "pipeArgs": [
              "-T",
              "-q",
              "-p",
              "2222",
              "-i",
              "${workspaceFolder}/.conf/id_rsa", // ssh key path
              "-o",
              "StrictHostKeyChecking=no",
              "-o",
              "UserKnownHostsFile /dev/null",
              "torizon@${config:torizon_ip}" // user@device
          ],
          "debuggerPath": "/vsdbg/vsdbg"
      },
      "preLaunchTask": "deploy-torizon-arm"
    },
    {
      "name": ".NET Torizon ARMv8",
      "type": "coreclr",
      "request": "launch",
      "program": "~/app/dotnetUno.Skia.Gtk",
      "cwd": "~/app/",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
        "DOTNET_MODIFIABLE_ASSEMBLIES": "debug",
        // "GDK_BACKEND": "x11",
        "UNO_DISABLE_OPENGL": "true",
        "UNO_FULLSCREEN": "true"
      },
      "args": [],
      "pipeTransport": {
          "pipeCwd": "${workspaceFolder}",
          "pipeProgram": "ssh",
          "pipeArgs": [
              "-T",
              "-q",
              "-p",
              "2222",
              "-i",
              "${workspaceFolder}/.conf/id_rsa", // ssh key path
              "-o",
              "StrictHostKeyChecking=no",
              "-o",
              "UserKnownHostsFile /dev/null",
              "torizon@${config:torizon_ip}" // user@device
          ],
          "debuggerPath": "/vsdbg/vsdbg"
      },
      "preLaunchTask": "deploy-torizon-arm64"
    }
  ]
}
