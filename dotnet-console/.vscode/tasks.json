{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/__change__.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/__change__.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/__change__.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
// --------------------------------------------------------------------- COMMON
        {
            "label": "run-docker-registry",
            "command": "pwsh",
            "type": "process",
            "args": [
                "${workspaceFolder}/.conf/runContainerIfNotExists.ps1",
                "docker",
                "'-d -p 5000:5000 --restart=always registry:2'",
                "registry"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-torizon-binfmt",
            "command": "pwsh",
            "type": "process",
            "args": [
                "${workspaceFolder}/.conf/runContainerIfNotExists.ps1",
                "docker",
                "'--rm -it --privileged torizon/binfmt'",
                "binfmt"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-share-wsl-ports",
            "command": "pwsh",
            "type": "process",
            "args": [
                "${workspaceFolder}/.conf/shareWSLPorts.ps1"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "check-deps",
            "command": "pwsh",
            "type": "process",
            "args": [
                "${workspaceFolder}/.conf/checkDeps.ps1",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "copy-docker-compose",
            "command": "sshpass",
            "type": "process",
            "args": [
                "-p",
                "${config:torizon_psswd}",
                "scp",
                "${config:torizon_workspace}/docker-compose.yml",
                "torizon@${config:torizon_ip}:~/"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "wait-a-bit",
            "command": "sleep",
            "type": "process",
            "args": [
                "1"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-pos-cleanup",
            "command": "ssh",
            "type": "process",
            "args": [
                "-i",
                "${workspaceFolder}/.conf/id_rsa",
                "-p",
                "${config:torizon_debug_ssh_port}",
                "-o",
                "UserKnownHostsFile=/dev/null",
                "-o", 
                "StrictHostKeyChecking=no",
                "torizon@${config:torizon_ip}",
                "rm -rf ~/app"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
// ---------------------------------------------------------------------- ARMv7
        {
            "label": "__change__-pre-cleanup-arm",
            "command": "sshpass",
            "type": "process",
            "args": [
                "-p",
                "${config:torizon_psswd}",
                "ssh",
                "torizon@${config:torizon_ip}",
                "LOCAL_REGISTRY=${config:host_ip} TAG=arm docker-compose down"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-build-torizon-arm",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/__change__.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-r",
                "linux-arm"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-publish-torizon-arm",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/__change__.csproj",
                "-r",
                "linux-arm"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-build-container-torizon-debug-arm",
            "command": "docker-compose",
            "type": "process",
            "options": {
                "env": {
                    "LOCAL_REGISTRY": "localhost",
                    "TAG": "arm"
                }
            },
            "args": [
                "build",
                "--build-arg",
                "IMAGE_ARCH=arm",
                "__container__-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-push-container-torizon-debug-arm",
            "command": "docker-compose",
            "type": "process",
            "options": {
                "env": {
                    "LOCAL_REGISTRY": "localhost",
                    "TAG": "arm"
                }
            },
            "args": [
                "push",
                "__container__-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-pull-container-torizon-debug-arm",
            "command": "sshpass",
            "type": "process",
            "args": [
                "-p",
                "${config:torizon_psswd}",
                "ssh",
                "torizon@${config:torizon_ip}",
                "LOCAL_REGISTRY=${config:host_ip} TAG=arm docker-compose pull __container__-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-run-container-torizon-debug-arm",
            "command": "sshpass",
            "type": "process",
            "args": [
                "-p",
                "${config:torizon_psswd}",
                "ssh",
                "torizon@${config:torizon_ip}",
                "LOCAL_REGISTRY=${config:host_ip} TAG=arm docker-compose up -d __container__-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-deploy-torizon-arm",
            "command": "scp",
            "type": "process",
            "args": [
                "-i",
                "${workspaceFolder}/.conf/id_rsa",
                "-o",
                "UserKnownHostsFile=/dev/null",
                "-o", 
                "StrictHostKeyChecking=no",
                "-P",
                "${config:torizon_debug_ssh_port}",
                "-pr",
                "${workspaceFolder}/bin/Debug/net6.0/linux-arm/publish",
                "torizon@${config:torizon_ip}:~/app"
            ],
            "dependsOn": [
                "copy-docker-compose",
                "__change__-pre-cleanup-arm",
                "__change__-build-torizon-arm",
                "__change__-publish-torizon-arm",
                "__change__-build-container-torizon-debug-arm",
                "__change__-push-container-torizon-debug-arm",
                "__change__-pull-container-torizon-debug-arm",
                "__change__-run-container-torizon-debug-arm",
                "wait-a-bit",
                "__change__-pos-cleanup"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-deploy-launch-torizon-arm",
            "command": "ssh",
            "type": "process",
            "args": [
                "-i",
                "${workspaceFolder}/.conf/id_rsa",
                "-o",
                "UserKnownHostsFile=/dev/null",
                "-o", 
                "StrictHostKeyChecking=no",
                "-p",
                "${config:torizon_debug_ssh_port}",
                "torizon@${config:torizon_ip}",
                "/home/torizon/app/__change__ >out.log 2>err.log &"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-deploy-run-torizon-arm",
            "command": "sleep",
            "type": "process",
            "args": [
                "2",
            ],
            "dependsOn": [
                "__change__-deploy-torizon-arm",
                "__change__-deploy-launch-torizon-arm",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
// ---------------------------------------------------------------------- ARMv8
        {
            "label": "__change__-pre-cleanup-arm64",
            "command": "sshpass",
            "type": "process",
            "args": [
                "-p",
                "${config:torizon_psswd}",
