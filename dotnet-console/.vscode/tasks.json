                "-r",
                "linux-arm64"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-publish-torizon-arm64",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/__change__.csproj",
                "-r",
                "linux-arm64"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-build-container-torizon-debug-arm64",
            "command": "docker-compose",
            "type": "process",
            "options": {
                "env": {
                    "LOCAL_REGISTRY": "localhost",
                    "TAG": "arm64"
                }
            },
            "args": [
                "build",
                "--build-arg",
                "IMAGE_ARCH=arm64",
                "__container__-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-push-container-torizon-debug-arm64",
            "command": "docker-compose",
            "type": "process",
            "options": {
                "env": {
                    "LOCAL_REGISTRY": "localhost",
                    "TAG": "arm64"
                }
            },
            "args": [
                "push",
                "__container__-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-pull-container-torizon-debug-arm64",
            "command": "sshpass",
            "type": "process",
            "args": [
                "-p",
                "${config:torizon_psswd}",
                "ssh",
                "torizon@${config:torizon_ip}",
                "LOCAL_REGISTRY=${config:host_ip} TAG=arm64 docker-compose pull __container__-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-run-container-torizon-debug-arm64",
            "command": "sshpass",
            "type": "process",
            "args": [
                "-p",
                "${config:torizon_psswd}",
                "ssh",
                "torizon@${config:torizon_ip}",
                "LOCAL_REGISTRY=${config:host_ip} TAG=arm64 docker-compose up -d __container__-debug"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-deploy-torizon-arm64",
            "command": "scp",
            "type": "process",
            "args": [
                "-i",
                "${workspaceFolder}/.conf/id_rsa",
                "-o",
                "UserKnownHostsFile=/dev/null",
                "-o", 
                "StrictHostKeyChecking=no",
                "-P",
                "${config:torizon_debug_ssh_port}",
                "-pr",
                "${workspaceFolder}/bin/Debug/net6.0/linux-arm64/publish",
                "torizon@${config:torizon_ip}:~/app"
            ],
            "dependsOn": [
                "copy-docker-compose",
                "__change__-pre-cleanup-arm64",
                "__change__-build-torizon-arm64",
                "__change__-publish-torizon-arm64",
                "__change__-build-container-torizon-debug-arm64",
                "__change__-push-container-torizon-debug-arm64",
                "__change__-pull-container-torizon-debug-arm64",
                "__change__-run-container-torizon-debug-arm64",
                "wait-a-bit",
                "__change__-pos-cleanup"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-deploy-launch-torizon-arm64",
            "command": "ssh",
            "type": "process",
            "args": [
                "-i",
                "${workspaceFolder}/.conf/id_rsa",
                "-o",
                "UserKnownHostsFile=/dev/null",
                "-o", 
                "StrictHostKeyChecking=no",
                "-p",
                "${config:torizon_debug_ssh_port}",
                "torizon@${config:torizon_ip}",
                "/home/torizon/app/__change__ >out.log 2>err.log &"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "__change__-deploy-run-torizon-arm64",
            "command": "sleep",
            "type": "process",
            "args": [
                "2",
            ],
            "dependsOn": [
                "__change__-deploy-torizon-arm64",
                "__change__-deploy-launch-torizon-arm64",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        }
    ]
}
